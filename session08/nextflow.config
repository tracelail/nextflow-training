/*
 * Session 8 — nextflow.config
 * Minimal configuration: sets output directory and enables Docker profile.
 */

// Default parameters — override on command line with  --param value
params {
    input   = "data/samplesheet.csv"
    outdir  = "results"
}

// Run locally without containers by default
profiles {
    standard {
        process.executor = 'local'
    }

    docker {
        docker.enabled = true
        process.executor = 'local'
    }
}

// Keep the work directory tidy between sessions
cleanup = false
